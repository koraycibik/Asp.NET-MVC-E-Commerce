@{
    ViewBag.Title = "Home Page";
}
<div>
    <h3>En Çok Satan Ürünler</h3>
    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active"><a href="#klasik" aria-controls="klasik" role="tab" data-toggle="tab">Klasik Gitar</a></li>
        <li role="presentation"><a href="#elektro" aria-controls="elektro" role="tab" data-toggle="tab">Elektro Gitar</a></li>
        <li role="presentation"><a href="#bas" aria-controls="bas" role="tab" data-toggle="tab">Bas gitar</a></li>
    
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="klasik">
            <div class="row" style="margin-top:10px">
                @{
                    foreach (var item in TempData["RandomProductKlasik"] as IEnumerable<MVCeCommerce.Models.Product>)
                    {
                        <div class="col-md-3">
                            <div class="thumbnail">
                                <img src="@Url.Content(item.ImageUrl)" alt="@Url.Content(item.AltText)" style="height:150px"/>
                                <div class="caption">
                                    <h4 style="height:50px;">@item.Name</h4>
                                    <h3>Fiyatı: @string.Format("{0:C2}", item.UnitPrice)</h3>
                                  
                                        @Html.ActionLink("Ürün Detayı", "ProductDetail","Product", new { id = item.ProductID }, new { @class = "btn btn-info" })
                                    
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
        <div role="tabpanel" class="tab-pane" id="elektro">
            <div class="row" style="margin-top:10px">
                @{
                    foreach (var item in TempData["RandomProductElektro"] as IEnumerable<MVCeCommerce.Models.Product>)
                    {
                        <div class="col-md-3">
                            <div class="thumbnail">
                                <img src="@Url.Content(item.ImageUrl)" alt="@Url.Content(item.AltText)" style="height:150px" />
                                <div class="caption">
                                    <h4 style="height:50px;">@item.Name</h4>
                                    <h3>Fiyatı: @string.Format("{0:C2}", item.UnitPrice)</h3>

                                    @Html.ActionLink("Ürün Detayı", "ProductDetail", "Product", new { id = item.ProductID }, new { @class = "btn btn-info" })

                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
        <div role="tabpanel" class="tab-pane" id="bas">
            <div class="row" style="margin-top:10px">
                @{
                    foreach (var item in TempData["RandomProductBas"] as IEnumerable<MVCeCommerce.Models.Product>)
                    {
                        <div class="col-md-3">
                            <div class="thumbnail">
                                <img src="@Url.Content(item.ImageUrl)" alt="@Url.Content(item.AltText)" style="height:150px" />
                                <div class="caption">
                                    <h4 style="height:50px;">@item.Name</h4>
                                    <h3>Fiyatı: @string.Format("{0:C2}", item.UnitPrice)</h3>

                                    @Html.ActionLink("Ürün Detayı", "ProductDetail", "Product", new { id = item.ProductID }, new { @class = "btn btn-info" })

                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>

</div>