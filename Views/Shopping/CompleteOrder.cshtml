
@{
    ViewBag.Title = "CompleteOrder";
}

<h2>Siparişi Tamamla</h2>
<div class="container">
    @using (Html.BeginForm("CompleteOrder", "Shopping", FormMethod.Post))
    {
        <div class="row" style="margin-top:50px">
            <div class="col-md-6 col-md-offset-3">
                @{
                    foreach (var item in TempData["PaymentTypes"] as IEnumerable<MVCeCommerce.Models.PaymentType>)
                    {
                        <label for="PaymentTypes_@item.PaymentTypeID">
                            <input id="PaymentTypes_@item.PaymentTypeID" type="radio" name="PaymentType" value="@item.PaymentTypeID" />
                            @item.TypeName
                            <br />
                            @item.Desctiption
                        </label>
                    }
                }
            </div>
            <div class="col-md-6 col-md-offset-3">
                @{
                    var c = TempData["Customer"] as MVCeCommerce.Models.Customer;

                }
                <label>Teslimat Adresi: </label>
                @Html.TextArea("Adres1", c.Address1);

                <label>Fatura Adresi: </label>
                @Html.TextArea("Adres2", c.Address2);

                <label>Telefon </label>
                @Html.TextArea("Mobile1", c.Mobile1);

            </div>
            <input type="submit" value="Devam Et" class="btn btn-primary"/>
        </div>
                    }

</div>
